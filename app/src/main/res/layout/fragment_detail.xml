<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="repo"
                type="com.example.github.model.Repo" />
    </data>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:padding="16dp">

        <TextView
                android:id="@+id/post_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:text="@{repo.fullName}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/avatar"/>

        <TextView
                android:id="@+id/post_body"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{repo.description}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/post_title" />
        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/avatar"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
        <TextView
                android:text="@string/owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/owner"
                android:drawablePadding="5dp"
                android:textStyle="bold"
                android:drawableStart="@drawable/ic_language"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/post_body"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.067" app:layout_constraintEnd_toStartOf="@+id/ownerValue"/>
        <TextView
                android:text="@{repo.owner.login}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ownerValue"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/post_body"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"/>
        <TextView
                android:text="@string/language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/language"
                android:drawablePadding="5dp"
                android:textStyle="bold"
                android:drawableStart="@drawable/ic_language"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/owner"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.067"
                app:layout_constraintEnd_toStartOf="@+id/languageValue"/>
        <TextView
                android:text="@{repo.language}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/languageValue"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/owner"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"/>
        <TextView
                android:text="@string/stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stars"
                android:drawablePadding="5dp"
                android:textStyle="bold"
                android:drawableStart="@drawable/ic_language"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/language"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.069"
                app:layout_constraintEnd_toStartOf="@+id/starValue"/>
        <TextView
                android:text="@{String.valueOf(repo.stars)}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/starValue"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/language"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"/>
        <TextView
                android:text="@string/license"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/license"
                android:drawablePadding="5dp"
                android:textStyle="bold"
                android:drawableStart="@drawable/ic_language"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/stars"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.067"
                app:layout_constraintEnd_toStartOf="@+id/licenseValue"/>
        <TextView
                android:text="@{repo.license.name}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/licenseValue"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/stars"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</layout>